@model IEnumerable<BatteryCommander.Web.Models.BattleRosterRow>

@{
    ViewBag.Title = "Battle Roster";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-responsive">
    <tr>
        <th>@Html.DisplayNameFor(m => m.Soldier)</th>
        <th>@Html.DisplayNameFor(m => m.Position)</th>
        <th></th>
    </tr>

    @foreach (var row in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => row.Soldier)</td>
            <td>@Html.DisplayFor(m => row.Position)</td>
        </tr>
    }
</table>
