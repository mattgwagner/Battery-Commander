@model IEnumerable<Soldier>

@{
    ViewBag.Title = "DSCA Roster";
}

<div class="page-header">
    <h1>@ViewBag.Title <span class="badge">@Model.Count()</span></h1>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Unit</th>
            <th>Soldier</th>
            <th>IWQ Date</th>
            <th>DSCA Date</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var soldier in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => soldier.Unit)</td>
                <td>@Html.DisplayFor(_ => soldier)</td>
                <td>@Html.DisplayFor(_ => soldier.IwqQualificationDate)</td>
                <td>@Html.DisplayFor(_ => soldier.DscaQualificationDate)</td>
            </tr>
        }
    </tbody>
</table>
