@model Soldier

@switch (Model.Status)
{
    case Soldier.SoldierStatus.PresentForDuty:
        <span class="label label-success">P</span>
        return;

    case Soldier.SoldierStatus.Unknown:
        <span class="label label-danger">Unknown</span>
        return;

    default:
        <span class="label label-warning">@Model</span>
        return;
}