@model NavigationViewComponent
<nav class="navbar navbar-inverse navbar-fixed-top no-print">
    <div>
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Battery Commander</a>
        </div>
        <div class="navbar-collapse collapse">
            @if (Model.ShowNavigation)
            {
            <ul class="nav navbar-nav">
                @if (Model.Soldier != null)
                {
                    <li>@Html.RouteLink("My Unit", "Unit.Details", new { id = Model.Soldier.UnitId }, new { @class = "nav-link" })</li>
                    <li>@Html.RouteLink("My Soldiers", "Unit.Soldiers", new { Model.Soldier.UnitId }, new { @class = "nav-link" })</li>
                    <li>@Html.RouteLink("My Profile", "Soldier.Details", new { id = Model.Soldier.Id }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Evaluations", "Index", "Evaluations", new { unitId = Model.Soldier.UnitId }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("My Vehicles", "Index", "Vehicles", new VehicleService.Query { Units = new[] { Model.Soldier.UnitId } }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("APFT", "Index", "APFT", new SoldierService.Query { Unit = Model.Soldier.UnitId }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("ABCP", "Index", "ABCP", new SoldierService.Query { Unit = Model.Soldier.UnitId }, new { @class = "nav-link" })</li>
                    <li><a class="nav-link" asp-controller="Weapons" asp-route-unit=@Model.Soldier.UnitId>Weapons</a></li>
                }
                else
                {
                    <li><a class="nav-link" asp-controller="Soldiers" asp-action="Index">Soldiers</a></li>
                    <li><a class="nav-link" asp-controller="Evaluations" asp-action="Index">Evaluations</a></li>
                    <li><a class="nav-link" asp-controller="Vehicles" asp-action="Index">Vehicles</a></li>
                    <li><a class="nav-link" asp-controller="APFT" asp-action="Index">APFT</a></li>
                    <li><a class="nav-link" asp-controller="ABCP" asp-action="Index">ABCP</a></li>
                    <li><a class="nav-link" asp-controller="Weapons" asp-action="Index">Weapons</a></li>
                }

                <li><a class="nav-link" asp-controller="SSD" asp-action="Index">SSD</a></li>
                <li><a class="nav-link" asp-controller="Units" asp-action="Index">Units</a></li>
                <li><a class="nav-link" href="https://docs.google.com/document/d/1l8zPeZ6fdzgo9_fAJvtvi1b1_9XoYQDUw-FCn3P_Ghw/edit?usp=sharing" target="_blank">About</a></li>
            </ul>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-controller="Home" asp-action="Logout">Logout</a></li>
                </ul>
            }
        </div>
    </div>
</nav>