@model IEnumerable<Soldier>

@{
    ViewBag.Title = "ABCP Tracker";
}

<div class="page-header">
    <h1>@ViewBag.Title <span class="badge">@Model.Count()</span> @Html.ActionLink("Add New", "New", "ABCP", null, new { @class = "btn btn-default" })</h1>
</div>

<table class="table table-striped" id="dt">
    <thead>
        <tr>
            <th>Soldier</th>
            <th>Unit</th>
            <th>Result</th>
            <th>Date</th>
            <th>Height</th>
            <th>Weight</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var soldier in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => soldier)</td>
                <td>@Html.DisplayFor(_ => soldier.Unit)</td>
                @if (soldier.LastAbcp != null)
                {
                    <td>@Html.DisplayFor(_ => soldier.LastAbcp, "ABCP")</td>
                    <td>@Html.DisplayFor(_ => soldier.LastAbcp.Date)</td>
                    <td>@Html.DisplayFor(_ => soldier.LastAbcp.Height)</td>
                    <td>@Html.DisplayFor(_ => soldier.LastAbcp.Weight)</td>
                }
                else
                {
                    <td colspan="4"></td>
                }
                <td>@Html.ActionLink("Add", "New", "ABCP", new { soldier = soldier.Id }, new { @class = "btn btn-default btn-xs" })</td>
            </tr>
        }
    </tbody>
</table>
