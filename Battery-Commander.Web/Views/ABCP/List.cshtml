@model IEnumerable<ABCP>

<h2>ABCP @Html.ActionLink("Add New", "New", "ABCP", null, new { @class = "btn btn-default" })</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var model in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => model.Soldier)</td>
                <td>@Html.DisplayFor(_ => model.Date)</td>
                <td>
                    @if (model.IsPassing)
                    {
                        <span class="label label-danger">Failure</span>
                    }
                </td>
                <td>@Html.ActionLink("Details", "Details", new { model.Id })</td>
            </tr>
        }
    </tbody>
</table>