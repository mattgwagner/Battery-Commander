<form method="post" enctype="multipart/form-data" asp-controller="Soldiers" asp-action="Import">
    @Html.AntiForgeryToken()    
    <div class="form-group">
        <div class="col-md-10">
            <p>In DTMS, go to Soldier Manager -> Unit -> {Your Unit}. Hit the download to Excel button (top right).</p>

            <p>Upload the DTMS Soldier Roster Report here (Must be XLSX Format!):</p>
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>