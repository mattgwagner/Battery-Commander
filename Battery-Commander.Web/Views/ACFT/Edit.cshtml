@model ACFT

@using (Html.BeginForm("Save", "ACFT", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.ValidationSummary()

    <div class="form-group form-group-lg">
        @Html.DisplayNameFor(model => model.Soldier)
        @Html.DropDownListFor(model => model.SoldierId, (IEnumerable<SelectListItem>)ViewBag.Soldiers, "-- Select a Soldier --", new { @class = "select2" })
        @Html.ActionLink("Add", "New", "Soldiers")
    </div>

    <div class="form-group form-group-lg">
        @Html.DisplayNameFor(model => model.Date)
        @Html.EditorFor(model => model.Date)
    </div>

    <div class="form-group form-group-lg">
        @Html.DisplayNameFor(model => model.ThreeRepMaximumDeadlifts)
        @Html.EditorFor(model => model.ThreeRepMaximumDeadlifts)
    </div>

    <div class="form-group form-group-lg">
        @Html.DisplayNameFor(model => model.StandingPowerThrow)
        @Html.EditorFor(model => model.StandingPowerThrow)
    </div>

    <div class="form-group form-group-lg">
        @Html.DisplayNameFor(model => model.HandReleasePushups)
        @Html.EditorFor(model => model.HandReleasePushups)
    </div>

    <div class="form-group form-group-lg clockpicker">
        @Html.DisplayNameFor(model => model.SprintDragCarry)
        @Html.EditorFor(model => model.SprintDragCarry)
    </div>

    <div class="form-group form-group-lg">
        @Html.DisplayNameFor(model => model.LegTucks)
        @Html.EditorFor(model => model.LegTucks)
    </div>

    <div class="form-group form-group-lg clockpicker">
        @Html.DisplayNameFor(model => model.TwoMileRun)
        @Html.EditorFor(model => model.TwoMileRun)
    </div>

    <button type="submit">Save</button>
}

@section Scripts{
    <script type="text/javascript">
        $('#SprintDragCarry').clockpicker({
            autoclose: true,
            afterDone: function () {
                $(this).val('00:' + $('#Run').val());
            }
        });
        $('#TwoMileRun').clockpicker({
            autoclose: true,
            afterDone: function () {
                $(this).val('00:' + $('#Run').val());
            }
        });
    </script>
}